<Window x:Class="wpf_test.ShowNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowNumber" Height="300" Width="300" Loaded="Window_Loaded" Background="#FFEC1B1B">
    <Grid DataContext="{Binding}" MouseDown="Grid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52*" />
            <ColumnDefinition Width="226*" />
        </Grid.ColumnDefinitions>
        <Image Height="150" HorizontalAlignment="Left" Margin="38,42,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="200" ImageFailed="image1_Click" Grid.ColumnSpan="2" OpacityMask="#FF1D0101" />
        <Button Content="Play" Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="61,104,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
    </Grid>
</Window>
